<div class="container">
  <h1>Restaurants</h1>
  <%= link_to "Add a new restaurant", new_restaurant_path %>
  <hr>

  <div id="restaurants">
    <% @restaurant.each do |restaurant| %>
      <%= render restaurant %>
      <p>
        <%= link_to "Show this restaurant", restaurant %>
      </p>
    <% end %>
  </div>
</div>
